{
  "runOnSave.statusMessageTimeout": 3000,
  "runOnSave.commands": [
    {
      "match": ".*charts/generic-service.*/*.yaml",
      "command": "helm lint charts/generic-service",
      "runIn": "terminal"
    },
    {
      "match": ".envrc$",
      "command": "direnv allow .",
      "runIn": "terminal"
    }
  ]
}
